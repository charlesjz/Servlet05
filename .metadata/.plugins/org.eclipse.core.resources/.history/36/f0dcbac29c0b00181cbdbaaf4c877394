package dom4j;

import java.io.File;
import java.io.IOException;
import java.util.Iterator;

import org.dom4j.Document;
import org.dom4j.Element;
import org.dom4j.io.SAXReader;

public class testXML {

    public static void main(String[] args) {
        // TODO Auto-generated method stub
        try {
            File file = new File("G:/计算机学习/ETL/【03.InformaticaETL工具视频教程】/InformaticaETL工具视频教程 30课/time.xml");
            SAXReader reader=new SAXReader();
            //读取xml文件到Document中
            Document doc=reader.read(file);
            //获取xml文件的根节点
            Element rootElement=doc.getRootElement();
            //定义一个Element用于遍历
            Element fooElement;
            //遍历所有名叫“VALUE”的节点
            int j=0;
            for(Iterator<?> i=rootElement.elementIterator("VALUE");i.hasNext();){
                fooElement=(Element)i.next();
                System.out.println(j+" NO: "+fooElement.attributeValue("Name"));
//                System.out.println("ADDR: "+fooElement.elementText("Duration"));
                j++;
            }
            System.out.println(rootElement.toString());
        } catch (Exception e) {
            // TODO: handle exception
            e.printStackTrace();
        }
        
    }

}