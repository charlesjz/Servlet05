<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN//EN"
"file:///spring-beans.dtd">
<beans>

	<bean id="customer"
			class="aop.advice.Customer"
			singleton="false">
		<property name="creditLimit">
			<value>300</value>
		</property>
	</bean>
	
	<bean id="customerDao"
			class="aop.advice.CustomerDaoImpl"/>
	
	<bean id="accountDao"
			class="aop.advice.AccountDaoImpl"/>
	
	<bean id="customerServiceTarget"
			class="aop.advice.CustomerServiceImpl">
		<property name="creditIncreaseLimit">
			<value>500</value>
		</property>
		<constructor-arg>
			<ref bean="customerDao"/>
		</constructor-arg>
		<constructor-arg>
			<ref bean="accountService"/>
		</constructor-arg>
		
		<property name="locale">
			<value>fr_FR</value>
		</property>
	</bean>
	
	<bean id="accountService"
			class="aop.advice.AccountServiceImpl">

		<constructor-arg>
			<ref bean="accountDao"/>
		</constructor-arg>
		
		<property name="accountTypes">
			<list>
				<value>Saving/CAD</value>
				<value>Checking/CAD</value>
				<value>Saving/USD</value>
				<value>Checking/USD</value>
				<value>Mortgage/CAD</value>
				<value>GIC/CAD</value>
				<value>GIC/USD</value>
				<value>Mutual Funds/CAD</value>
				<value>Mutual Funds/USD</value>
				<value>GIC/EUR</value>
				<value>GIC/AUD</value>
				<value>GIC/HKD</value>
			</list>
		</property>

	</bean>
	
	<bean id="customEditorConfigurer"
			class="org.springframework.beans.factory.config.CustomEditorConfigurer">
		<property name="customEditors">
			<map>
				<entry key="aop.advice.AccountType">
					<bean id="accountTypeEditor"
							class="aop.advice.AccountTypeEditor"/>
				</entry>
			</map>
		</property>
	</bean>
	
	<bean class="aop.advice.CustomerActivityLogger"/>
	
	<bean id="messageSource"
			class="org.springframework.context.support.ResourceBundleMessageSource">
		<property name="basename">
			<value>aop/advice/nctbank</value>
		</property>
	</bean>

	<bean id="creditLimitIncreaseAdvice"
			class="aop.advice.CreditLimitIncreaseAdvice">
			<property name="creditLimitCheckThreshold">
				<value>250000</value>
			</property>
	</bean>
	
	<bean id="customerCreationMonitorAdvice"
			class="aop.advice.CustomerCreationMonitorAdvice"/>
	
	<bean id="customerCreationChecking"
			class="aop.advice.CustomerCreationChecking"/>

	<bean id="customerService"
			class="org.springframework.aop.framework.ProxyFactoryBean">
		<property name="proxyInterfaces">
			<value>aop.advice.CustomerService</value>
		</property>
		<property name="interceptorNames">
			<list>
				<value>creditLimitIncreaseAdvice</value>
				<value>customerCreationMonitorAdvice</value>
				<value>customerCreationChecking</value>
			</list>
		</property>
		<property name="target">
			<ref bean="customerServiceTarget"/>
		</property>
	</bean>

</beans>
