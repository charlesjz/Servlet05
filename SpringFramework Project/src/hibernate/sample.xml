<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN//EN"
"file:///spring-beans.dtd">
<beans>

	<bean id="customer"
			class="hibernate.Customer"
			singleton="false">
		<property name="creditLimit">
			<value>300</value>
		</property>
	</bean>
	
	<bean id="customerDao"
			class="hibernate.CustomerDaoHibernate">

		<property name="hibernateTemplate">
			<ref bean="hibernateTemplate"/>
		</property>

	</bean>
	
	<bean id="accountDao"
			class="hibernate.AccountDaoHibernate">

		<property name="hibernateTemplate">
			<ref bean="hibernateTemplate"/>
		</property>

	</bean>

	<bean id="customerService"
			class="hibernate.CustomerServiceImpl">
		<property name="creditIncreaseLimit">
			<value>500</value>
		</property>
		<constructor-arg>
			<ref bean="customerDao"/>
		</constructor-arg>
		<constructor-arg>
			<ref bean="accountService"/>
		</constructor-arg>
		
		<property name="locale">
			<value>fr_FR</value>
		</property>

	</bean>
	
	<bean id="accountService"
			class="hibernate.AccountServiceImpl">

		<constructor-arg>
			<ref bean="accountDao"/>
		</constructor-arg>
		
		<property name="accountTypes">
			<list>
				<value>Saving/CAD</value>
				<value>Checking/CAD</value>
				<value>Saving/USD</value>
				<value>Checking/USD</value>
				<value>Mortgage/CAD</value>
				<value>GIC/CAD</value>
				<value>GIC/USD</value>
				<value>Mutual Funds/CAD</value>
				<value>Mutual Funds/USD</value>
				<value>GIC/EUR</value>
				<value>GIC/AUD</value>
				<value>GIC/HKD</value>
			</list>
		</property>

	</bean>
	
	<bean id="customEditorConfigurer"
			class="org.springframework.beans.factory.config.CustomEditorConfigurer">
		<property name="customEditors">
			<map>
				<entry key="hibernate.AccountType">
					<bean id="accountTypeEditor"
							class="hibernate.AccountTypeEditor"/>
				</entry>
			</map>
		</property>
	</bean>
	
	<bean id="messageSource"
			class="org.springframework.context.support.ResourceBundleMessageSource">
		<property name="basename">
			<value>hibernate/nctbank</value>
		</property>
	</bean>

	<bean id="appLoggerInterceptor"
			class="hibernate.ApplicationLoggerInterceptor">
		<constructor-arg index="0">
			<value>c:\\applog.txt</value>
		</constructor-arg>
	</bean>
	
	<bean id="appLoggerAdvisor"
			class="org.springframework.aop.support.RegexpMethodPointcutAdvisor">
		<property name="advice">
			<ref bean="appLoggerInterceptor"/>
		</property>
		<property name="pattern">
			<value>#.+</value>
		</property>
	</bean>
	
	<bean id="autoProxyCreator"
			class="org.springframework.aop.framework.autoproxy.DefaultAdvisorAutoProxyCreator">
	</bean>

	<bean id="propertyConfigurer"
			class="org.springframework.beans.factory.config.PropertyPlaceholderConfigurer">
		<property name="locations">
			<list>
				<value>src/hibernate/jdbc.properties</value>
			</list>
		</property>
	</bean>
	
	<bean id="dataSource"
			class="org.apache.commons.dbcp.BasicDataSource">
		<property name="driverClassName">
			<value>${database.driver}</value>
		</property>
		<property name="url">
			<value>${database.url}</value>
		</property>
		<property name="username">
			<value>${database.username}</value>
		</property>
		<property name="password">
			<value>${database.password}</value>
		</property>
	</bean>
	
	<bean id="sessionFactory"
			class="org.springframework.orm.hibernate3.LocalSessionFactoryBean">
		<property name="dataSource">
			<ref bean="dataSource"/>
		</property>
		<property name="hibernateProperties">
			<props>
				<prop key="hibernate.dialect">
					org.hibernate.dialect.MySQLDialect
				</prop>
				<prop key="hibernate.show_sql">
					true
				</prop>
			</props>
		</property>
		<property name="mappingResources">
			<list>
				<value>hibernate/customer.hbm.xml</value>
				<value>hibernate/account.hbm.xml</value>
			</list>
		</property>
	</bean>
	
	<bean id="hibernateTemplate"
			class="org.springframework.orm.hibernate3.HibernateTemplate">
		<property name="sessionFactory">
			<ref bean="sessionFactory"/>
		</property>
	</bean>

</beans>
