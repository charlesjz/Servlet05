<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN//EN"
"file:///spring-beans.dtd">
<beans>

	<bean id="propertyConfigurer"
			class="org.springframework.beans.factory.config.PropertyPlaceholderConfigurer">
		<property name="locations">
			<list>
				<value>src/remote/rmi/client/rmi.properties</value>
			</list>
		</property>
	</bean>

	<bean id="customerService"
			class="org.springframework.remoting.rmi.RmiProxyFactoryBean">
		<property name="serviceUrl">
			<value>rmi://${serviceHost}/nctbank/CustService</value>
		</property>
		<property name="serviceInterface">
			<value>remote.rmi.CustomerService</value>
		</property>
	</bean>

	<bean id="accountService"
			class="org.springframework.remoting.rmi.RmiProxyFactoryBean">
		<property name="serviceUrl">
			<value>rmi://${serviceHost}/AcctService</value>
		</property>
		<property name="serviceInterface">
			<value>remote.rmi.AccountService</value>
		</property>
	</bean>

</beans>
